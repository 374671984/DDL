<!--pages/self/self.wxml-->
<image class="background" src="/img/个人中心背景图.png"></image>
<view class="container">
  <view class="userinfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{nickName}}</text>
      <input class="signature" placeholder="好好学习，天天向上" bindinput="getSignature" value="{{signature}}"/>
  </view>

  <view class="selfTab" wx:key="selfTab" wx:for="{{selfList}}" wx:for-item="selfTab">
    <view class=""></view>
  </view>
</view>
